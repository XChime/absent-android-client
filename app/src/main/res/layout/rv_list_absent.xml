<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dateText"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Date : 12 December 2019"
            android:textColor="@color/primaryDarkColor"
            />
        <TextView
            android:id="@+id/statusText"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="IN"
            android:textColor="@color/black"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/inText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IN : "
                android:textSize="20sp"
                android:textColor="@color/green"
                />
            <TextView
                android:id="@+id/inClock"
                android:layout_marginStart="2dp"
                android:layout_toRightOf="@+id/inText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:59 PM"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/inClock"
                android:id="@+id/outText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OUT : "
                android:textSize="20sp"
                android:textColor="@color/secondaryDarkColor"
                />
            <TextView
                android:id="@+id/outClock"
                android:layout_marginStart="2dp"
                android:layout_toRightOf="@+id/outText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:59 PM"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
